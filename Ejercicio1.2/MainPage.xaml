<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2.MainPage">

    <StackLayout>

        
        <Entry x:Name="nombres" Keyboard="Text" Placeholder="Nombre"   Margin="10,0,10,0"/>
        <Entry x:Name="apellidos" Keyboard="Text" Placeholder="Apellido"   Margin="10,0,10,0"/>
        <Entry x:Name="edad" Keyboard="Numeric" Placeholder="Edad"   Margin="10,0,10,0"/>
        <Entry x:Name="correo" Keyboard="Email" Placeholder="Correo Electronico"   Margin="10,0,10,0"/>

        <Button   x:Name="btnEnviar" Text="Enviar Datos" CornerRadius="20" Margin="10,0,10,0" BackgroundColor="DarkRed" Clicked="btnEnviar_Clicked" TextColor="white"></Button>



    </StackLayout>

</ContentPage>
